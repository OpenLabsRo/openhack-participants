{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$components": ["src/lib/components"],
      "$components/*": ["src/lib/components/*"],
      "$runes": ["src/runes"],
      "$runes/*": ["src/runes/*"],
      "$routes": ["src/routes"],
      "$routes/*": ["src/routes/*"],
      "$api": ["src/lib/api"],
      "$api/*": ["src/lib/api/*"],
      "$types": ["src/types"],
      "$types/*": ["src/types/*"],
      "$img": ["img"],
      "$img/*": ["img/*"]
    }
  },
  "include": ["src"]
}
